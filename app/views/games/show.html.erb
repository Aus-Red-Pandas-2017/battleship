
<div class="game_players">

  <% if game.player1_id && game.player2_id %>
  You are ID(<%= session[:user_id]%>)
  <br>
  Player1 is <%=game.player1.username%> (ID: <%= game.player1_id %>)
  <br>
  Player2 is <%=game.player2.username%> (ID: <%= game.player2_id %>)
  <br>
  It is <%= game.active_player.username %>'s (ID:<%= game.active_player.id%>) turn.
  <!-- <#%= render "player_details", locals: {game: @game} %> -->
  <% end %>
</div>


<div class="poll_buttons">
  <div class="pass">
  <%= button_to 'Pass', pass_game_path(game), :method => :patch %>
  </div>

  <div class="check">
  <%= button_to 'Check', check_game_path(game), :method => :get, remote: true %>
  </div>
</div>
<% @opponent_ships = [] %>

<%= render "shared/attack_board" %>


<% if game.turn_id == session[:user_id]%>
<div class="attack_box">
<h3>Enter Attack Coordinate</h3>
<%=  form_tag(controller: "games", action: "attack", method: "post") do %>
<%= text_field :attack, :pasta %>
<%= submit_tag %>
<%end%>
</div>
<%end %>




<div class="create_board">
  <div class="set_board">
    <h1>Set Your Board</h1>
    <%= render "shared/new_board"%>
  </div>

  <div class="set_ship_form">
    <%=  form_tag(controller: "games", action: "ships", method: "post") do %>


      <h3>Pick Your Ship</h3>
      <%= radio_button_tag(:ship, 1) %>
      <%= label_tag(:carrier, "Carrier") %><br>
      <%= radio_button_tag(:ship, 2) %>
      <%= label_tag(:battleship, "Battlehip") %><br>
      <%= radio_button_tag(:ship, 3) %>
      <%= label_tag(:submarine, "Submarine") %><br>
      <%= radio_button_tag(:ship, 4) %>
      <%= label_tag(:cruiser, "Cruiser") %><br>
      <%= radio_button_tag(:ship, 5) %>
      <%= label_tag(:destroyer, "Destroyer") %><br>
      <br>

      <h3>Select Orientation</h3>
      <%= radio_button_tag(:orientation, "horizontal") %>
      <%= label_tag(:horizontal, "Horizontal") %> <br>
      <%= radio_button_tag(:orientation, "vertical") %>
      <%= label_tag(:vertical, "Vertical") %><br>
      <br>

      <h3>Starting Coordinate</h3>
      <div class="coordinate_box">

        <%= text_field :starting_coordinate, :pasta %>

        <br>
        <%= hidden_field_tag :player_id, session[:user_id] %>
        <!-- <#%= hidden_field_tag :starting_coordinate, something %> -->
      <%= submit_tag %>

      </div>
  <%end%>
  </div>
</div>



